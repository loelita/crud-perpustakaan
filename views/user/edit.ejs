<%- include ../layouts/header.ejs %>
<% if (messages.error) { %>
<p style="color : red">
    <%- messages.error %>
</p>
<% } %>
<% if (messages.success) { %>
<p style="color: green">
    <%- messages.success %>
</p>
<% } %>
<div class="container">
    <div class="row mt-3">
        <div class="col-12">
            <div class="card-header">
                Edit Data Buku
            </div>
            <div class="card-body">
                <form action="/router/edit/<%= id %>" method="post" name="form1">
                    <div class="form-group">
                        <tr>
                            <td>Judul</td>
                            <td><input class="form-control" type="text" name="judul" id="judul" value="<%= judul %>" /></td>
                        </tr>
                    </div>
                    <div class="form-group">
                        <tr>
                            <td>Stok</td>
                            <td><input class="form-control" type="text" name="stok" id="stok" value="<%= stok %>" /></td>
                        </tr>
                    </div>
                    <div class="form-group">
                        <tr>
                            <td>Harga</td>
                            <td><input class="form-control" type="text" name="harga" id="harga" value="<%= harga %>" /></td>
                        </tr>
                    </div>
                    <tr>
                        <td></td>
                        <td><input class="btn btn-outline-primary float-right" type="submit" name="Submit" value="Edit" /></td>
                    </tr>

                    <input type="hidden" name="_method" value="PUT">
                </form>
                <a href="/tampil" class="btn btn-primary">Back</a>
            </div>

        </div>
    </div>
</div>